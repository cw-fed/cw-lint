{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "module": "ESNext",
    "lib": ["DOM", "ES2015", "ES2016.Array.Include"],
    "target": "ESNext",
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["./types/*"],
      "src": ["src/*"],
      "root": ["."],
    },
    "experimentalDecorators": true,
    "resolveJsonModule": true,
  },
  "exclude": ["node_modules/*", "test/*", "spec/*"]
}
